#!/bin/sh

cache=~/bin/_rpmqa_cache #  cache file for `rpm -qa|sort`

o=o # output (default on)
r= # refresh
g= # grep
i= # grep case-insensitive

while getopts frg:i:h option;do
case "$option" in
  f)
    r=r
    ;;
  r)
    r=r
    o=
    ;;
  g)
    g=g
    o=
    GARG="$OPTARG"
    ;;
  i)
    i=i
    o=
    GARG="$OPTARG"
    ;;
  h)
    echo \
'options
-f = force package refresh and output
-r = package refresh only
-g ARG = grep search
-i ARG = grep search case-insensitive
-h = show help (this)
'
    exit
    ;;
esac
done

# refresh cache if needed
[ $r ] && rpm -qa|sort > $cache && chmod 664 $cache

# grep
[ $i ] && egrep --color=auto -i "$GARG" $cache
[ $g ] && egrep --color=auto "$GARG" $cache

# output
[ $o ] && echo "$(<$cache)"

